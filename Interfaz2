import tkinter as tk
import time #para hacer el timer

class goles():
    def __init__(self):
        self.root = tk.Tk(className='Gol')
        self.root.geometry('200x100')
        self.labelA = tk.Label(self.root, text="¿Que equipo anoto?")
        
        self.button1 = tk.Button(self.root,
                           text = 'Local',
                           command=lambda:[self.root.destroy(),self.gol1()
                                           ])
        self.button2 = tk.Button(self.root,
                           text = 'Visitante',
                           command=lambda:[self.root.destroy(),self.gol2()
                                           ])

        self.labelA.pack()
        self.button1.pack()
        self.button2.pack()

        self.root.mainloop()
        
    def gol1(self):
        gol_local = 0
        gol_local+=1
        return gol_local
            
    def gol2(self):
        gol_visitante = 0
        gol_visitante+=1                
        return gol_visitante
    
